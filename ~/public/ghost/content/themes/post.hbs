{{!< default}}
<main class="main_masonD" role="main">
    {{#post}}
    <article class="article_masonD" role="article" itemscope itemtype="http://schema.org/Article">
        <header class="postheader_masonD">
            <time class="date_masonD date_post" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MM YYYY'}}</time>
            <h1 class="posttitle_masonD" itemprop="headline">{{title}}</h1>
        </header>
        <div class="postcontent_masonD" itemprop="articleBody">
            {{#if image}}
            <img src="{{image}}" />
            {{/if}}
            {{content}}
        </div>

        {{#if tags}}
        <div class="posttags_masonD">
            Tags: {{tags separator=" | "}}
        </div>
        {{/if}}
        <div class="sharepost_masonD">
            <h4 class="share_masonD">Share this post: &nbsp;</h4>
            <a class="share_masonD ion-social-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_masonD">Twitter</span></a>
            <a class="share_masonD ion-social-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_masonD">Facebook</span></a>
            <a class="share_masonD ion-social-googleplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_masonD">Google+</span></a>
            <a class="share_masonD ion-social-reddit" target+"_blank" href="//www.reddit.com/submit" onclick="window.location = '//www.reddit.com/submit?url=' + encodeURIComponent(window.location); return false"><span class="hidethis_masonD">Reddit</span></a>
        </div>
        {{#if author}}
        <footer class="postfooter_masonD">
            <address itemscope itemtype="http://schema.org/Person">

            {{#if author.image}}
            <div class="authorimage_masonD"><img src="{{author.image}}" itemprop="image" /></div>
            {{/if}}

            <div class="person_masonD">

            <h4 class="authorname_masonD"><span itemprop="author">{{author.name}}</span></h4>

            {{#if author.website}}
            <div class="authorwebsite_masonD">
                <a href="{{author.website}}" itemprop="url">{{author.website}}</a>
            </div>
            {{/if}}

            <div class="authorbio_masonD">
                <p>{{author.bio}}</p>
            </div>

            </div>

            </address>
        </footer>
        {{/if}}
    </article>

    {{> "disqus"}}

    {{/post}}
    {{#if pagination}}
    <div class="pagination_masonD">
        {{{pagination}}}
    </div>
    {{/if}}
</main>
